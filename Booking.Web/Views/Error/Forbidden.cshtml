@{
    ViewData["Title"] = "Access Denied - 403";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1 text-warning">
                    <i class="bi bi-shield-exclamation"></i>
                </h1>
                <h2 class="mb-3">Access Denied</h2>
                <p class="lead">
                    You don't have permission to access this resource.
                </p>
                
                <div class="mt-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>If you believe this is an error, please contact the administrator.</p>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door me-2"></i>Go Home
                        </a>
                    }
                    else
                    {
                        <p>Please log in to access this resource.</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-house-door me-2"></i>Go Home
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>