@model ExternalLoginConfirmationVM

<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-info bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Complete Your Registration</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-info">
                        You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                        Please enter additional information below to complete your registration.
                    </p>
                    <section>
                        <form method="post" asp-controller="Account" asp-action="ExternalLoginConfirmation">
                            <input asp-for="ReturnUrl" hidden />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" aria-required="true" readonly />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" aria-required="true" />
                                <label asp-for="Name" class="form-label"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div>
                                <button type="submit" class="w-100 btn btn-lg btn-outline-primary">Complete Registration</button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

