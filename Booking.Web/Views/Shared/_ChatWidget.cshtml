<div id="chatWidget" class="position-fixed" style="bottom: 20px; right: 20px; z-index: 1050;">
    <!-- Chat Toggle Button -->
    <button id="chatToggle" class="btn btn-primary rounded-circle shadow-lg" style="width: 60px; height: 60px;">
        <i class="bi bi-chat-dots fs-4"></i>
    </button>
    
    <!-- Mini Chat Window -->
    <div id="miniChatWindow" class="card shadow-lg d-none" style="width: 350px; height: 500px; bottom: 80px; right: 0; position: absolute;">
        <div class="card-header bg-primary text-white p-2">
            <div class="d-flex justify-content-between align-items-center">
                <small><strong>🤖 Villa Assistant</strong></small>
                <div>
                    <button class="btn btn-sm text-white" onclick="openFullChat()" title="Open full chat">
                        <i class="bi bi-arrows-fullscreen"></i>
                    </button>
                    <button id="closeMiniChat" class="btn btn-sm text-white" title="Close chat">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-2" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);">
            <div id="miniChatMessages" style="height: 300px; overflow-y: auto; font-size: 0.875rem;">
                <div class="text-center text-muted p-3">
                    <i class="bi bi-robot fs-2 mb-2 d-block"></i>
                    <small>👋 Hi! I'm here to help you find the perfect villa. Click the expand button above for the full chat experience!</small>
                </div>
            </div>
        </div>
        <div class="card-footer p-2">
            <div class="input-group input-group-sm">
                <input type="text" id="miniMessageInput" class="form-control" placeholder="Ask me anything...">
                <button id="miniSendButton" class="btn btn-primary">
                    <i class="bi bi-send"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#chatToggle').click(function() {
        $('#miniChatWindow').toggleClass('d-none');
    });
    
    $('#closeMiniChat').click(function() {
        $('#miniChatWindow').addClass('d-none');
    });
    
    // Handle mini chat input
    $('#miniSendButton, #miniMessageInput').on('click keypress', function(e) {
        if (e.type === 'click' || (e.type === 'keypress' && e.which === 13)) {
            e.preventDefault();
            openFullChat();
        }
    });
});

function openFullChat() {
    window.open('@Url.Action("Index", "Chatbot")', '_blank');
}
</script>

<style>
#chatToggle:hover {
    transform: scale(1.1);
    transition: transform 0.2s ease;
}

#miniChatWindow {
    border-radius: 15px;
    overflow: hidden;
}
</style>